<div id="login" class="animate form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name, id: 'login', class: 'animate form')) do |f| %>
    <div class="field">
      <%= f.label :email, id: 'uname' %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", id: 'password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, id: 'loginkeeping' %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'login button' %>
    </div>
  <% end %>

</div>